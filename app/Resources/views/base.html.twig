<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
        <title>{% block title %}{% if page_title is defined %} {{ page_title }} | {% endif %} Ma Cagette
        {% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
            <link rel="stylesheet" href="{{ asset('css/tool_bar_menu.css') }}">
            <link rel="stylesheet" href="{{ asset('css/footer.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% include 'topnav.html.twig' %}
    
        <div class="row">

            <div class="col-xs-2">
                {{ render(controller('AppBundle:ToolBarSort:sort')) }}
            </div>

            <div class="col-xs-10">

                <div class="container">

                    {% block body %}
                
                    {% endblock %}

                </div>

            </div>
        </div>
        
        {% include 'footer.html.twig' %}
        
        {% block javascripts %}
            <script src="{{ asset('js/jquery.min.js') }}"></script>
            <script src="{{ asset('js/bootstrap.js') }}"></script>
            <script src="{{ asset('js/bouton_active.js') }}"></script>
        {% endblock %}
    </body>
</html>
