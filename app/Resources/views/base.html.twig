<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('homepage') }}">Ma-Cagette</a>
                </div>
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li id="id_li_Accueil" class=""><a href="{{ path('homepage') }}">Accueil<span class="sr-only">(current)</span></a></li>
                    <li id="id_li_Catalogue" class=""><a href="{{ path('app_catalogue_catalogueafficher') }}">Catalogue</a></li>
                    <li id="id_li_Contact" class=""><a href="{{ path('app_contact_contactafficher') }}">Contact</a></li>
                </ul>
                <!-- Search Module -->
                <form class="navbar-form navbar-left">
                    <div class="form-group">
                    <input type="text" class="form-control" placeholder="Rechercher">
                    </div>
                    <button type="submit" class="btn btn-default">Valider</button>
                </form>
                <ul class="nav navbar-nav navbar-right">

                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}

                        <li><a href="{{ path('fos_user_profile_show') }}"><span class="glyphicon glyphicon-user"></span> {{ app.user.username }}</a></li>

                        <li><a href="{{ path('fos_user_security_logout') }}"><span class="glyphicon glyphicon-log-out"></span>{{ ' Déconnxeion'|trans({}, 'FOSUserBundle') }}</a></li>
                    
                    {% else %}
                    
                        <li class="dropdown" >
                        
                            <a href="{{ path('fos_user_registration_register') }}" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            Créer un compte<span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">

                                <li><a href="{{ path('fos_user_registration_register') }}"><span class="glyphicon glyphicon-grain"></span> | En tant que producteur</a></li>
                                <li><a href="{{ path('fos_user_registration_register') }}"><span class="glyphicon glyphicon-briefcase"></span> | En tant que consommateur professionnel</a></li>
                                <li><a href="{{ path('fos_user_registration_register') }}"><span class="glyphicon glyphicon-user"></span> | En tant que particulier</a></li>

                            </ul>
                        
                        </li>

                    {% endif %}
                    <li class="dropdown">

                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Connexion<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('fos_user_security_login') }}">En tant que professionnel</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="{{ path('fos_user_security_login') }}">En tant que particulier</a></li>
                        </ul>
                        
                    </li>
                </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>
        
        {% block body %}
        

        
        {% endblock %}

        {% block footer %}

            <footer>

                je suis un footer

            </footer>

        {% endblock %}
        
        {% block javascripts %}
            <script src="{{ asset('js/jquery.min.js') }}"></script>
            <script src="{{ asset('js/bootstrap.js') }}"></script>
            <script src="{{ asset('js/bouton_active.js') }}"></script>
            {# <script src="{{ asset('js/navbar.js') }}"></script> #}
        {% endblock %}
    </body>
</html>
